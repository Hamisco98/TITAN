@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
            
                <hr />
            
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.FatherName" class="form-control" />
                    <label asp-for="Input.FatherName" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.GrandFatherName" class="form-control" />
                    <label asp-for="Input.GrandFatherName" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label asp-for="Input.LastName" class="form-label"></label>
                </div>
            
                <hr />
            
                <div class="form-floating">
                    <input asp-for="Input.Gender" class="form-control" disabled />
                    <label asp-for="Input.Gender" class="form-label"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.DateOfBirth" class="form-control"/>
                    <label asp-for="Input.DateOfBirth" class="form-label"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.JoindDate" class="form-control" disabled/>
                    <label asp-for="Input.JoindDate" class="form-label"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.FixedSalary" class="form-control" disabled/>
                    <label asp-for="Input.FixedSalary" class="form-label"></label>
                </div>
            
                <hr />

                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.OfficePhoneNumber" class="form-control" />
                    <label asp-for="Input.OfficePhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.OfficePhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button> 
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" class="w-100"></label>
                @if(Model.Input.ProfilePicture is not null)
                {
                    <img class="ProfilePicture" id="ProfilePicture" alt="@Model.Input.FirstName @Model.Input.LastName Profile Picture" 
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))"/>
                }
                else
                {
                    <img class="ProfilePicture" id="ProfilePicture" alt="@Model.Input.FirstName @Model.Input.LastName Profile Picture" 
                         src="~/images/no_image.png"/>
                }
                <div class="custom-file m-2">
                    <input type="file" accept="images/*" class="custom-file-input" asp-for="Input.ProfilePicture"
                    onchange="document.getElementById('ProfilePicture').src = window.URL.createObjectURL(this.files[0])"
                    />
                    <label asp-for="Input.ProfilePicture">Choose Picture...</label>
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
