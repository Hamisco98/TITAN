@model UserRolesViewModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.Username</h2> Add/Remove Roles
        </div>
        <div class="card-body">
            <input asp-for="UserID" type="hidden"/>
            @for(int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="from-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName">
                    <input asp-for="@Model.Roles[i].IsSelected" class="from-check-input">
                    <label asp-for="@Model.Roles[i].IsSelected" class="from-check-lable">@Model.Roles[i].RoleName</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="Identity" asp-controller="Users" asp-action="GetUsers" class="btn btn-secondary">Users List</a>
        </div>
    </div>
</form>